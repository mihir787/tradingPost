<div class="section horizontal-list">
  <h4>Incoming Trades</h4>
  <div class="row">
    <% if !incoming_trades.any? %>
    <div class="col s6 offset-s3">
      <h5>You have no proposed trades from other users.</h5>
    </div>
    <% else %>
      <% incoming_trades.each do |trade| %>
        <div class="col s3">
          <a href="/items/<%= trade.item.id %>">
            <div class="card picture">
              <div class="card-image">
                <% if trade.item.picture_file_name.nil? %>
                  <img src="/assets/default_image.jpg" class="image-size-large">
                <% else %>
                  <img src="/assets/<%= trade.item.picture_file_name %>" class="image-size">
                <% end %>
              </div>
              <div class="card-content center">
                <h4 class="title"><%= trade.item.title %></h4>
                <p class="message"><%= trade.message %></p>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    <% end %>
    </div>
</div>


<div class="divider"></div>
<div class="divider"></div>

<div class="section horizontal-list" >
  <h4>Proposed Trades</h4>
  <div class="row">
    <% if !current_user.trades.any? %>
    <div class="col s6 offset-s3">
      <h5>You have not proposed any trades with other users.</h5>
    </div>
    <% end %>
    <% current_user.trades.each do |trade| %>
      <div class="col s3">
        <a href="/items/<%= trade.item.id %>">
          <div class="card picture">
            <div class="card-image">
              <% if trade.item.picture_file_name.nil? %>
                <img src="/assets/default_image.jpg" class="image-size-large">
              <% else %>
                <img src="/assets/<%= trade.item.picture_file_name %>" class="image-size">
              <% end %>
            </div>
            <div class="card-content center">
              <h4 class="title"><%= trade.item.title %></h4>
              <p class="message"><%= trade.message %></p>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>


<div class="divider"></div>

<div class="section horizontal-list" >
  <h4>Listed Items</h4>
  <div class="row" ng-controller="ItemsController">
    <% if !current_user.trades.any? %>
      <div class="col s6 offset-s3">
        <h5>You have not listed an items.</h5>
        <a href="/items/new" class="waves-effect waves-light center cyan btn-large"><i class="material-icons left">add</i>List Item</a>
      </div>
    <% end %>
      <div class="col s3" ng-repeat="item in items | filter:{'user_id':<%= current_user.id %>}:true | filter:query">
        <a href="/items/{{item.id}}">
          <div class="card picture">
            <div class="card-image">
              <div ng-if="null == item.picture_file_name">
                <img src="/assets/default_image.jpg" class="image-size">
              </div>
              <div ng-if="null != item.picture_file_name">
                <img src="/assets/{{item.picture_file_name}}" class="image-size">
              </div>
            </div>
            <div class="card-content center">
              <h4 class="title">{{ item.title }}</h4>
              <p class="description">{{ item.description }}</p>
            </div>
          </div>
        </a>
      </div>
  </div>
</div>




